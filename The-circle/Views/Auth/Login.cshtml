@{
Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>TruYou Login</title>
</head>
<body>
<h1>Login with TruYou Certificate</h1>

<form method="post" enctype="multipart/form-data" asp-controller="Auth" asp-action="Login">
    <label for="email">Email (CN):</label><br />
    <input type="email" name="email" id="email" required /><br /><br />

    <label for="certFile">Upload .crt file:</label><br />
    <input type="file" name="certFile" id="certFile" accept=".crt" required /><br /><br />

    <button type="submit">Login</button>
</form>

@if (ViewBag.Error != null)
{
<p style="color: red">@ViewBag.Error</p>
}
</body>
</html>
