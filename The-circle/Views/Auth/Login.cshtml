@{
Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>TruYou Login</title>
    <style>
        html, body {
            margin: 0;
            height: 100%;
            background-color: #333;
            color: #eee;
            font-family: sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-container {
            background-color: #444;
            padding: 2rem 3rem;
            border-radius: 8px;
            box-shadow: 0 0 12px rgba(0, 0, 0, 0.5);
            text-align: center;
            max-width: 400px;
            width: 100%;
        }

        .login-container h1 {
            margin-bottom: 1.5rem;
        }

        input[type="email"],
        input[type="file"] {
            width: 100%;
            padding: 0.5rem;
            margin-top: 0.25rem;
            margin-bottom: 1rem;
            border-radius: 4px;
            border: 1px solid #ccc;
            background-color: #222;
            color: #eee;
        }

        input[type="file"]::file-selector-button {
            background-color: #E10600;
            border: none;
            color: white;
            padding: 0.4rem 0.8rem;
            border-radius: 4px;
            cursor: pointer;
        }

        button[type="submit"] {
            background-color: #E10600;
            color: white;
            border: none;
            padding: 0.6rem 1.2rem;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1rem;
        }

        button[type="submit"]:hover {
            background-color: #FF2A00;
        }

        p.error-message {
            color: red;
            margin-top: 1rem;
        }
    </style>
</head>
<body>
<div class="login-container">
    <h1>Login with TruYou Certificate</h1>

    <form method="post" enctype="multipart/form-data" asp-controller="Auth" asp-action="Login">
        <label for="email">Email (CN):</label><br />
        <input type="email" name="email" id="email" required /><br />

        <label for="certFile">Upload .crt file:</label><br />
        <input type="file" name="certFile" id="certFile" accept=".crt" required /><br />

        <button type="submit">Login</button>
    </form>

    @if (ViewBag.Error != null)
    {
    <p class="error-message">@ViewBag.Error</p>
    }
</div>
</body>
</html>
